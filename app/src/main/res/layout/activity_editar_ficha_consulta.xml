<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.noctua.tocare.EditarFichaConsulta"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolBarStyle"
        app:popupTheme="@style/ToolBarStyle" />

    <LinearLayout
        android:id="@+id/personalLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/tb_main"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            fresco:failureImage="@drawable/imagenotfound"
            fresco:placeholderImage="@drawable/loadingimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="Carregando..."
                android:textColor="@color/textcolornew"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tv_DataNascimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Carregando..."
                android:textColor="@color/textcolornew"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/personalLayout">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:scrollIndicators="right"
            android:weightSum="1"
            tools:context="br.com.easyin.login_singup_databasefromphone.ClassLayouts.SingUp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:text="Anamnese:"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_anamnese"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView2"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Aqui vai ficar o texto resposável pela Anamnese."
                android:inputType="textMultiLine|textLongMessage"
                android:paddingStart="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/textcolornew"
                android:textColorHighlight="@color/TextSelected"
                android:textColorHint="@color/textcolornew" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="Exame Físico:"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_exameFisico"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView2"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Aqui vai ficar o texto resposável pelo Exame Físico."
                android:inputType="textMultiLine|textLongMessage"
                android:paddingStart="10dp"
                android:textColor="@color/textcolornew"
                android:textColorHighlight="@color/TextSelected"
                android:textColorHint="@color/textcolornew" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="Hipótese Diagnóstica:"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_hipoteseDiagnostica"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView2"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Aqui vai ficar o texto resposável pela Hipótese Diagnóstica."
                android:inputType="textMultiLine|textLongMessage"
                android:paddingStart="10dp"
                android:textColor="@color/textcolornew"
                android:textColorHighlight="@color/TextSelected"
                android:textColorHint="@color/textcolornew" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="Plano Terapêutico:"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_planoTerapeutico"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView2"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Aqui vai ficar o texto resposável pelo Plano Terapêutico."
                android:inputType="textMultiLine|textLongMessage"
                android:paddingStart="10dp"
                android:textColor="@color/textcolornew"
                android:textColorHighlight="@color/TextSelected"
                android:textColorHint="@color/textcolornew" />

            <Button
                android:id="@+id/btSalvar"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_rounded_accent"
                android:text="Salvar"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
